[
    
    {
        "id": 94,
        "name": "الشرح",
        "transliteration": "Ash-Sharh",
        "translation": "تسکین",
        "type": "meccan",
        "total_verses": 8,
        "verses": [
            {
                "id": 1,
                "text": "أَلَمۡ نَشۡرَحۡ لَكَ صَدۡرَكَ",
                "translation": "(اے نبیؐ) کیا ہم نے تمہارا سینہ تمہارے لیے کھول نہیں دیا؟"
            },
            {
                "id": 2,
                "text": "وَوَضَعۡنَا عَنكَ وِزۡرَكَ",
                "translation": "اور تم پر سے وہ بھاری بوجھ اتار دیا"
            },
            {
                "id": 3,
                "text": "ٱلَّذِيٓ أَنقَضَ ظَهۡرَكَ",
                "translation": "جو تمہاری کمر توڑے ڈال رہا تھا"
            },
            {
                "id": 4,
                "text": "وَرَفَعۡنَا لَكَ ذِكۡرَكَ",
                "translation": "اور تمہاری خاطر تمہارے ذکر کا آوازہ بلند کر دیا"
            },
            {
                "id": 5,
                "text": "فَإِنَّ مَعَ ٱلۡعُسۡرِ يُسۡرًا",
                "translation": "پس حقیقت یہ ہے کہ تنگی کے ساتھ فراخی بھی ہے"
            },
            {
                "id": 6,
                "text": "إِنَّ مَعَ ٱلۡعُسۡرِ يُسۡرٗا",
                "translation": "بے شک تنگی کے ساتھ فراخی بھی ہے"
            },
            {
                "id": 7,
                "text": "فَإِذَا فَرَغۡتَ فَٱنصَبۡ",
                "translation": "لہٰذا جب تم فارغ ہو تو عبادت کی مشقت میں لگ جاؤ"
            },
            {
                "id": 8,
                "text": "وَإِلَىٰ رَبِّكَ فَٱرۡغَب",
                "translation": "اور اپنے رب ہی کی طرف راغب ہو"
            }
        ]
    }
]