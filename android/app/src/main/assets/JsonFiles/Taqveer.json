[
    
    {
        "id": 81,
        "name": "التكوير",
        "transliteration": "At-Takwir",
        "translation": "لپیٹنا",
        "type": "meccan",
        "total_verses": 29,
        "verses": [
            {
                "id": 1,
                "text": "إِذَا ٱلشَّمۡسُ كُوِّرَتۡ",
                "translation": "جب سورج لپیٹ دیا جائے گا"
            },
            {
                "id": 2,
                "text": "وَإِذَا ٱلنُّجُومُ ٱنكَدَرَتۡ",
                "translation": "اور جب تارے بکھر جائیں گے"
            },
            {
                "id": 3,
                "text": "وَإِذَا ٱلۡجِبَالُ سُيِّرَتۡ",
                "translation": "اور جب پہاڑ چلائے جائیں گے"
            },
            {
                "id": 4,
                "text": "وَإِذَا ٱلۡعِشَارُ عُطِّلَتۡ",
                "translation": "اور جب دس مہینے کی حاملہ اونٹنیاں اپنے حال پر چھوڑ دی جائیں گی"
            },
            {
                "id": 5,
                "text": "وَإِذَا ٱلۡوُحُوشُ حُشِرَتۡ",
                "translation": "اور جب جنگلی جانور سمیٹ کر اکٹھے کر دیے جائیں گے"
            },
            {
                "id": 6,
                "text": "وَإِذَا ٱلۡبِحَارُ سُجِّرَتۡ",
                "translation": "اور جب سمندر بھڑکا دیے جائیں گے"
            },
            {
                "id": 7,
                "text": "وَإِذَا ٱلنُّفُوسُ زُوِّجَتۡ",
                "translation": "اور جب جانیں (جسموں سے) جوڑ دی جائیں گی"
            },
            {
                "id": 8,
                "text": "وَإِذَا ٱلۡمَوۡءُۥدَةُ سُئِلَتۡ",
                "translation": "اور جب زندہ گاڑی ہوئی لڑکی سے پوچھا جائے گا"
            },
            {
                "id": 9,
                "text": "بِأَيِّ ذَنۢبٖ قُتِلَتۡ",
                "translation": "کہ وہ کس قصور میں ماری گئی؟"
            },
            {
                "id": 10,
                "text": "وَإِذَا ٱلصُّحُفُ نُشِرَتۡ",
                "translation": "اور جب اعمال نامے کھولے جائیں گے"
            },
            {
                "id": 11,
                "text": "وَإِذَا ٱلسَّمَآءُ كُشِطَتۡ",
                "translation": "اور جب آسمان کا پردہ ہٹا دیا جائے گا"
            },
            {
                "id": 12,
                "text": "وَإِذَا ٱلۡجَحِيمُ سُعِّرَتۡ",
                "translation": "اور جب جہنم دہکائی جائے گی"
            },
            {
                "id": 13,
                "text": "وَإِذَا ٱلۡجَنَّةُ أُزۡلِفَتۡ",
                "translation": "اور جب جنت قریب لے آئی جائے گی"
            },
            {
                "id": 14,
                "text": "عَلِمَتۡ نَفۡسٞ مَّآ أَحۡضَرَتۡ",
                "translation": "اُس وقت ہر شخص کو معلوم ہو جائے گا کہ وہ کیا لے کر آیا ہے"
            },
            {
                "id": 15,
                "text": "فَلَآ أُقۡسِمُ بِٱلۡخُنَّسِ",
                "translation": "پس نہیں، میں قسم کھاتا ہوں"
            },
            {
                "id": 16,
                "text": "ٱلۡجَوَارِ ٱلۡكُنَّسِ",
                "translation": "پلٹنے اور چھپ جانے والے تاروں کی"
            },
            {
                "id": 17,
                "text": "وَٱلَّيۡلِ إِذَا عَسۡعَسَ",
                "translation": "اور رات کی جبکہ وہ رخصت ہوئی"
            },
            {
                "id": 18,
                "text": "وَٱلصُّبۡحِ إِذَا تَنَفَّسَ",
                "translation": "اور صبح کی جبکہ اس نے سانس لیا"
            },
            {
                "id": 19,
                "text": "إِنَّهُۥ لَقَوۡلُ رَسُولٖ كَرِيمٖ",
                "translation": "یہ فی الواقع ایک بزرگ پیغام بر کا قول ہے"
            },
            {
                "id": 20,
                "text": "ذِي قُوَّةٍ عِندَ ذِي ٱلۡعَرۡشِ مَكِينٖ",
                "translation": "جو بڑی توانائی رکھتا ہے، عرش والے کے ہاں بلند مرتبہ ہے"
            },
            {
                "id": 21,
                "text": "مُّطَاعٖ ثَمَّ أَمِينٖ",
                "translation": "وہاں اُس کا حکم مانا جاتا ہے، وہ با اعتماد ہے"
            },
            {
                "id": 22,
                "text": "وَمَا صَاحِبُكُم بِمَجۡنُونٖ",
                "translation": "اور (اے اہل مکہ) تمہارا رفیق مجنون نہیں ہے"
            },
            {
                "id": 23,
                "text": "وَلَقَدۡ رَءَاهُ بِٱلۡأُفُقِ ٱلۡمُبِينِ",
                "translation": "اُس نے اُس پیغام بر کو روشن افق پر دیکھا ہے"
            },
            {
                "id": 24,
                "text": "وَمَا هُوَ عَلَى ٱلۡغَيۡبِ بِضَنِينٖ",
                "translation": "اور وہ غیب (کے اِس علم کو لوگوں تک پہنچانے) کے معاملے میں بخیل نہیں ہے"
            },
            {
                "id": 25,
                "text": "وَمَا هُوَ بِقَوۡلِ شَيۡطَٰنٖ رَّجِيمٖ",
                "translation": "اور یہ کسی شیطان مردود کا قول نہیں ہے"
            },
            {
                "id": 26,
                "text": "فَأَيۡنَ تَذۡهَبُونَ",
                "translation": "پھر تم لوگ کدھر چلے جا رہے ہو؟"
            },
            {
                "id": 27,
                "text": "إِنۡ هُوَ إِلَّا ذِكۡرٞ لِّلۡعَٰلَمِينَ",
                "translation": "یہ تو سارے جہان والوں کے لیے ایک نصیحت ہے"
            },
            {
                "id": 28,
                "text": "لِمَن شَآءَ مِنكُمۡ أَن يَسۡتَقِيمَ",
                "translation": "تم میں سے ہر اُس شخص کے لیے جو راہ راست پر چلنا چاہتا ہو"
            },
            {
                "id": 29,
                "text": "وَمَا تَشَآءُونَ إِلَّآ أَن يَشَآءَ ٱللَّهُ رَبُّ ٱلۡعَٰلَمِينَ",
                "translation": "اور تمہارے چاہنے سے کچھ نہیں ہوتا جب تک اللہ رب العالمین نہ چاہے"
            }
        ]
    }
]