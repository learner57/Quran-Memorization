[
    {
        "id": 101,
        "name": "القارعة",
        "transliteration": "Al-Qari'ah",
        "translation": "کھڑکھڑاہٹ",
        "type": "meccan",
        "total_verses": 11,
        "verses": [
            {
                "id": 1,
                "text": "ٱلۡقَارِعَةُ",
                "translation": "عظیم حادثہ"
            },
            {
                "id": 2,
                "text": "مَا ٱلۡقَارِعَةُ",
                "translation": "کیا ہے وہ عظیم حادثہ؟"
            },
            {
                "id": 3,
                "text": "وَمَآ أَدۡرَىٰكَ مَا ٱلۡقَارِعَةُ",
                "translation": "تم کیا جانو کہ وہ عظیم حادثہ کیا ہے؟"
            },
            {
                "id": 4,
                "text": "يَوۡمَ يَكُونُ ٱلنَّاسُ كَٱلۡفَرَاشِ ٱلۡمَبۡثُوثِ",
                "translation": "وہ دن جب لوگ بکھرے ہوئے پروانوں کی طرح"
            },
            {
                "id": 5,
                "text": "وَتَكُونُ ٱلۡجِبَالُ كَٱلۡعِهۡنِ ٱلۡمَنفُوشِ",
                "translation": "اور پہاڑ رنگ برنگ کے دھنکے ہوئے اون کی طرح ہوں گے"
            },
            {
                "id": 6,
                "text": "فَأَمَّا مَن ثَقُلَتۡ مَوَٰزِينُهُۥ",
                "translation": "پھر جس کے پلڑے بھاری ہوں گے"
            },
            {
                "id": 7,
                "text": "فَهُوَ فِي عِيشَةٖ رَّاضِيَةٖ",
                "translation": "وہ دل پسند عیش میں ہوگا"
            },
            {
                "id": 8,
                "text": "وَأَمَّا مَنۡ خَفَّتۡ مَوَٰزِينُهُۥ",
                "translation": "اور جس کے پلڑے ہلکے ہوں گے"
            },
            {
                "id": 9,
                "text": "فَأُمُّهُۥ هَاوِيَةٞ",
                "translation": "اس کی جائے قرار گہری کھائی ہوگی"
            },
            {
                "id": 10,
                "text": "وَمَآ أَدۡرَىٰكَ مَا هِيَهۡ",
                "translation": "اور تمہیں کیا خبر کہ وہ کیا چیز ہے؟"
            },
            {
                "id": 11,
                "text": "نَارٌ حَامِيَةُۢ",
                "translation": "بھڑکتی ہوئی آگ"
            }
        ]
    }
]