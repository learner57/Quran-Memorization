        "verses": [
            {
                "id": 1,
                "text": "أَلۡهَىٰكُمُ ٱلتَّكَاثُرُ",
                "translation": "تم لوگوں کو زیادہ سے زیادہ اور ایک دوسرے سے بڑھ کر دنیا حاصل کرنے کی دھن نے غفلت میں ڈال رکھا ہے"
            },
            {
                "id": 2,
                "text": "حَتَّىٰ زُرۡتُمُ ٱلۡمَقَابِرَ",
                "translation": "یہاں تک کہ (اسی فکر میں) تم لب گور تک پہنچ جاتے ہو"
            },
            {
                "id": 3,
                "text": "كَلَّا سَوۡفَ تَعۡلَمُونَ",
                "translation": "ہرگز نہیں، عنقریب تم کو معلوم ہو جائے گا"
            },
            {
                "id": 4,
                "text": "ثُمَّ كَلَّا سَوۡفَ تَعۡلَمُونَ",
                "translation": "پھر (سن لو کہ) ہرگز نہیں، عنقریب تم کو معلوم ہو جائے گا"
            },
            {
                "id": 5,
                "text": "كَلَّا لَوۡ تَعۡلَمُونَ عِلۡمَ ٱلۡيَقِينِ",
                "translation": "ہرگز نہیں، اگر تم یقینی علم کی حیثیت سے (اِس روش کے انجام کو) جانتے ہوتے (تو تمہارا یہ طرز عمل نہ ہوتا)"
            },
            {
                "id": 6,
                "text": "لَتَرَوُنَّ ٱلۡجَحِيمَ",
                "translation": "تم دوزخ دیکھ کر رہو گے"
            },
            {
                "id": 7,
                "text": "ثُمَّ لَتَرَوُنَّهَا عَيۡنَ ٱلۡيَقِينِ",
                "translation": "پھر (سن لو کہ) تم بالکل یقین کے ساتھ اُسے دیکھ لو گے"
            },
            {
                "id": 8,
                "text": "ثُمَّ لَتُسۡـَٔلُنَّ يَوۡمَئِذٍ عَنِ ٱلنَّعِيمِ",
                "translation": "پھر ضرور اُس روز تم سے اِن نعمتوں کے بارے میں جواب طلبی کی جائے گی"
            }
        ]
    }
