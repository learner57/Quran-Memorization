[
    
    {
        "id": 82,
        "name": "الإنفطار",
        "transliteration": "Al-Infitar",
        "translation": "ٹکڑے ہونا",
        "type": "meccan",
        "total_verses": 19,
        "verses": [
            {
                "id": 1,
                "text": "إِذَا ٱلسَّمَآءُ ٱنفَطَرَتۡ",
                "translation": "جب آسمان پھٹ جائے گا"
            },
            {
                "id": 2,
                "text": "وَإِذَا ٱلۡكَوَاكِبُ ٱنتَثَرَتۡ",
                "translation": "اور جب تارے بکھر جائیں گے"
            },
            {
                "id": 3,
                "text": "وَإِذَا ٱلۡبِحَارُ فُجِّرَتۡ",
                "translation": "اور جب سمندر پھاڑ دیے جائیں گے"
            },
            {
                "id": 4,
                "text": "وَإِذَا ٱلۡقُبُورُ بُعۡثِرَتۡ",
                "translation": "اور جب قبریں کھول دی جائیں گی"
            },
            {
                "id": 5,
                "text": "عَلِمَتۡ نَفۡسٞ مَّا قَدَّمَتۡ وَأَخَّرَتۡ",
                "translation": "اُس وقت ہر شخص کو اُس کا اگلا پچھلا سب کیا دھرا معلوم ہو جائے گا"
            },
            {
                "id": 6,
                "text": "يَـٰٓأَيُّهَا ٱلۡإِنسَٰنُ مَا غَرَّكَ بِرَبِّكَ ٱلۡكَرِيمِ",
                "translation": "اے انسان، کس چیز نے تجھے اپنے اُس رب کریم کی طرف سے دھوکے میں ڈال دیا"
            },
            {
                "id": 7,
                "text": "ٱلَّذِي خَلَقَكَ فَسَوَّىٰكَ فَعَدَلَكَ",
                "translation": "جس نے تجھے پیدا کیا، تجھے نک سک سے درست کیا، تجھے متناسب بنایا"
            },
            {
                "id": 8,
                "text": "فِيٓ أَيِّ صُورَةٖ مَّا شَآءَ رَكَّبَكَ",
                "translation": "اور جس صورت میں چاہا تجھ کو جوڑ کر تیار کیا؟"
            },
            {
                "id": 9,
                "text": "كَلَّا بَلۡ تُكَذِّبُونَ بِٱلدِّينِ",
                "translation": "ہرگز نہیں، بلکہ (اصل بات یہ ہے کہ) تم لوگ جزا و سزا کو جھٹلاتے ہو"
            },
            {
                "id": 10,
                "text": "وَإِنَّ عَلَيۡكُمۡ لَحَٰفِظِينَ",
                "translation": "حالانکہ تم پر نگراں مقرر ہیں"
            },
            {
                "id": 11,
                "text": "كِرَامٗا كَٰتِبِينَ",
                "translation": "ایسے معزز کاتب"
            },
            {
                "id": 12,
                "text": "يَعۡلَمُونَ مَا تَفۡعَلُونَ",
                "translation": "جو تمہارے ہر فعل کو جانتے ہیں"
            },
            {
                "id": 13,
                "text": "إِنَّ ٱلۡأَبۡرَارَ لَفِي نَعِيمٖ",
                "translation": "یقیناً نیک لوگ مزے میں ہوں گے"
            },
            {
                "id": 14,
                "text": "وَإِنَّ ٱلۡفُجَّارَ لَفِي جَحِيمٖ",
                "translation": "اور بے شک بدکار لوگ جہنم میں جائیں گے"
            },
            {
                "id": 15,
                "text": "يَصۡلَوۡنَهَا يَوۡمَ ٱلدِّينِ",
                "translation": "جزا کے دن وہ اس میں داخل ہوں گے"
            },
            {
                "id": 16,
                "text": "وَمَا هُمۡ عَنۡهَا بِغَآئِبِينَ",
                "translation": "اور اُس سے ہرگز غائب نہ ہو سکیں گے"
            },
            {
                "id": 17,
                "text": "وَمَآ أَدۡرَىٰكَ مَا يَوۡمُ ٱلدِّينِ",
                "translation": "اور تم کیا جانتے ہو کہ وہ جزا کا دن کیا ہے؟"
            },
            {
                "id": 18,
                "text": "ثُمَّ مَآ أَدۡرَىٰكَ مَا يَوۡمُ ٱلدِّينِ",
                "translation": "ہاں، تمہیں کیا خبر کہ وہ جزا کا دن کیا ہے؟"
            },
            {
                "id": 19,
                "text": "يَوۡمَ لَا تَمۡلِكُ نَفۡسٞ لِّنَفۡسٖ شَيۡـٔٗاۖ وَٱلۡأَمۡرُ يَوۡمَئِذٖ لِّلَّهِ",
                "translation": "یہ وہ دن ہے جب کسی شخص کے لیے کچھ کرنا کسی کے بس میں نہ ہوگا، فیصلہ اُس دن بالکل اللہ کے اختیار میں ہوگا"
            }
        ]
    }
]