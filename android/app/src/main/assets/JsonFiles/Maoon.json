[
       
    {
        "id": 107,
        "name": "الماعون",
        "transliteration": "Al-Ma'un",
        "translation": "تھوڑی سی چیز",
        "type": "meccan",
        "total_verses": 7,
        "verses": [
            {
                "id": 1,
                "text": "أَرَءَيۡتَ ٱلَّذِي يُكَذِّبُ بِٱلدِّينِ",
                "translation": "تم نے دیکھا اُس شخص کو جو آخرت کی جزا و سزا کو جھٹلاتا ہے؟"
            },
            {
                "id": 2,
                "text": "فَذَٰلِكَ ٱلَّذِي يَدُعُّ ٱلۡيَتِيمَ",
                "translation": "وہی تو ہے جو یتیم کو دھکے دیتا ہے"
            },
            {
                "id": 3,
                "text": "وَلَا يَحُضُّ عَلَىٰ طَعَامِ ٱلۡمِسۡكِينِ",
                "translation": "اور مسکین کو کھانا دینے پر نہیں اکساتا"
            },
            {
                "id": 4,
                "text": "فَوَيۡلٞ لِّلۡمُصَلِّينَ",
                "translation": "پھر تباہی ہے اُن نماز پڑھنے والوں کے لیے"
            },
            {
                "id": 5,
                "text": "ٱلَّذِينَ هُمۡ عَن صَلَاتِهِمۡ سَاهُونَ",
                "translation": "جو اپنی نماز سے غفلت برتتے ہیں"
            },
            {
                "id": 6,
                "text": "ٱلَّذِينَ هُمۡ يُرَآءُونَ",
                "translation": "جو ریا کاری کرتے ہیں"
            },
            {
                "id": 7,
                "text": "وَيَمۡنَعُونَ ٱلۡمَاعُونَ",
                "translation": "اور معمولی ضرورت کی چیزیں (لوگوں کو) دینے سے گریز کرتے ہیں"
            }
        ]
    }
]